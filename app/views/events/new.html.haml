.row
  .col-xs-3
  .col-xs-6.admin-text
    =form_for @event, html: { multipart: true } do |f|
      %fieldset
        %legend Add an Event
        = if @event.errors.any?
          .row.form-row
            .col-xs-12
              %h2 Errors:
              %ul
                = @event.errors.full_messages.each do |m|
                  %li=m
        .row.form-row
          .col-xs-4
            =f.label :title
          .col-xs-4
            =f.text_field :title
          .col-xs-4
        .row.form-row
          .col-xs-4
            =f.label :date
          .col-xs-8
            =f.date_select :date
        .row.form-row
          .col-xs-4
            =f.label :time
          .col-xs-4
            =f.time_field :time
          .col-xs-4
        .row.form-row
          .col-xs-4
            =f.label :flyer do
              Flyer <small class="asterisk"> *</small>
          .col-xs-4
            =f.file_field :flyer
          .col-xs-4
        .row.form-row
          .col-xs-4
          .col-xs-4
            =f.submit "Add the Event, yo!", :class => "submit-custom"
          .col-xs-4

        .row
          .col-xs-12
            %label.required-label
              %small.asterisk * required


  .col-xs-3
