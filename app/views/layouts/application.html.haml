!!!
%html
  %head
    - if @page
      %title= @page.title
    - else
      %title Party Bassics
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    - if params[:controller] === "charges"
      %script{:src => "https://checkout.stripe.com/checkout.js"}
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
  %body
    .container-fluid
      - if user_signed_in? and params[:controller] != "welcome"
        %nav.navbar.navbar-default{:role => "navigation"}
          .navbar-header
            %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "#"} Party Bassics
          / Collect the nav links, forms, and other content for toggling
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li
                %a{:href => "/controls"} Control Panel Home
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Events
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "#"}
                      %strong Manage:
                  %li
                    %a{:href => "/events"} Edit
                  %li
                    %a{:href => "/events/new"} Create New
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Purchases
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "/purchases"} View
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Pages
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "#"}
                      %strong Manage:
                  %li
                    %a{:href => "/pages"} Edit
                  - if current_user.role == "admin"
                    %li
                      %a{:href => "/pages/new"} Create New
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Contents
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "/contents"} Edit
                  - if current_user.role == "admin"
                    %li
                      %a{:href => "/contents/new"} Create New
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Graphics
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "/graphics"} Edit
                  - if current_user.role == "admin"
                    %li
                      %a{:href => "/graphics/new"} Create New
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Email
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "/emails/new"} New Mass Email
                  %li
                    %a{:href => "/emails/event"} New Event Email
                  %li
                    %a{:href => "/emails/change"} Change Public Address
            %ul.nav.navbar-nav.navbar-right
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Me
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "/users/edit"} Edit
                  - if current_user.role == "admin"
                    %li
                      %a{:href => "/users/sign_up"} Sign Up
              %li.active
                - if user_signed_in?
                  = link_to("Sign Out", destroy_user_session_path, :method => :delete)
                - else
                  %a{:href => "/users/sign_in"} Sign In
          / /.navbar-collapse
      - if user_signed_in? or params[:controller] === "charges"
        - if flash[:notice]
          .row
            .col-xs-12.flash
              %p.notice
                = flash[:notice]
        - if flash[:alert]
          .row
            .col-xs-12.flash
              %p.alert
                = flash[:alert]
        - if flash[:error]
          .row
            .col-xs-12.flash
              %p.error
                = flash[:error]
      %input#from-controller{:type => "hidden", :value => params[:controller]}/
      = yield
