.row
  .col-xs-12
    .table-responsive
      %table.table
        %thead
          %th Email
          %th Confirmation #
          %th # of Tickets
          %th Date Purchased
          %th Amount Paid
        %tbody
          - @purchases.order("email").each do |purchase|
            %tr
              %td=purchase.email
              %td=purchase.conf_num
              %td=purchase.quantity
              %td=purchase.created_at.strftime("%_m / %e / %_y")
              %td=number_to_currency(purchase.amount.to_i / 100)
