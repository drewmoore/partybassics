.row
  .col-xs-3
  .col-xs-6.admin-text.admin-top
    =form_tag emails_create_path do
      %fieldset
        %legend Send a Mass Email
        .row.form-row
          .col-xs-4
            =label_tag(:subject, "Subject")
          .col-xs-4
            =text_field_tag :subject
          .col-xs-4
        .row.form-row
          .col-xs-4
            =label_tag(:text, "Say Something")
          .col-xs-4
            =text_area_tag :text
          .col-xs-4
        .row.form-row
          .col-xs-4
          .col-xs-4
            =submit_tag "Send It!"
          .col-xs-4
  .col-xs-3
