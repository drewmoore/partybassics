.row.full-screen
  .col-xs-12.site-container.full-screen
    #folds-container.full-screen
      - folds = ["L", "C", "R"]
      - f_count = 1
      - folds.each do |f|
        .half-screen(style="z-index: -#{f_count}" class="fold#{f}")
          - trypts = ["L", "C", "R"]
          - t_count = (folds.length + 1) * f_count
          - trypts.each do |t|
            .third-screen(class="panel#{t}" style="z-index: -#{t_count}")
              =image_tag("face-panel-blue.png", class: "trypt#{t_count} full-screen")
              =image_tag("face-panel-bright.png", class: "trypt-bright#{t_count} full-screen")
              - t_count += 1
        - f_count += 1

    #content-container.full-screen
      .content-panel.content-heading
        =image_tag("logo-dark.png", class: "logo")
        %h1 Nashville's Premier EDM Promotions
        %button#three-column Three Columns
        %button#panorama-column Panorama
